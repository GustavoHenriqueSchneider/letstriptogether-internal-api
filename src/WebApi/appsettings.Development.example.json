{
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=lets-trip-together;Username={POSTGRES_USER};Password={POSTGRES_PASSWORD}",
    "Redis": "localhost:6379,password={REDIS_PASSWORD}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "NotificationSettings": {
    "Address": "http://localhost:5089/api/v1/notifications"
  },
  "JsonWebTokenSettings": {
    "Issuer": "http://localhost:5088",
    "SecretKey": "{JWT_SECRET_KEY}",
    "AccessTokenValidityInMinutes": 5,
    "RefreshTokenValidityInMinutes": 1440,
    "ResetPasswordTokenValidityInMinutes": 15,
    "InvitationTokenValidityInMinutes": 10080
  },
  "EmailSettings": {
    "From": "no-reply@letstriptogether.com",
    "SmtpServer": "{SMTP_SERVER}",
    "Port": 2525,
    "Username": "{SMTP_USERNAME}",
    "Password": "{SMTP_PASSWORD}",
    "EnableSsl": true
  },
  "EmailTemplateSettings": {
    "Company": {
      "Name": "Let's Trip Together",
      "Contact": "contato@letstriptogether.com"
    },
    "Url": {
      "Website": "http://localhost:3000",
      "ResetPassword": "/reset-password?token=",
      "PrivacyPolicy": "/privacy-policy",
      "TermsOfUse": "/terms-of-use"
    }
  },
  "Swagger": {
    "Enabled": true
  },
  "AllowedHosts": "*"
}

